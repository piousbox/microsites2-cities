
// New profile photo

= form_for @photo, :url => photos_path, :html => { :multipart => true } do |f|

  - if @photo.errors.any?
    #error_explanation
      %h2= t('e.there_are_errors')
      %ul
        - @photo.errors.full_messages.each do |msg|
          %li= msg

  %h3= t('photos.new_profile_photo')

  .new-photo
    = f.file_field :photo

  = f.hidden_field :is_public, :value => 1
  = f.hidden_field :set_as_profile_photo, :value => true
  = f.hidden_field :user_id, :value => @current_user.id

  .actions
    = f.submit t('form.submit')
