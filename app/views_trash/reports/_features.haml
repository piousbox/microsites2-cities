
.reports-features
  %h2= t('reports.list')
  .items
    - reports.each do |feature|
      .item
        %h3= link_to feature[:name], report_path( feature.name_seo )
        = render 'meta', :report => feature
        .thumb
          - unless feature.photo.blank?
            = link_to image_tag( feature.photo.photo.url(:thumb) ), report_path( feature.name_seo )
        .subhead= feature[:subhead]
        -# .more= link_to 'Read more...', feature[:link_path]
        .clear
  .clear
