
%script#home_wiki{ :type => 'text/template' }
  .item.pointers
    .inner
      %h2 Some pointers to keep in mind
      %ul
        %li To add photo to a report, edit the photo and mark its report.
        %li To add photo to city you must edit that city.

  .item.utils
    .inner
      %h3 Utils
      %ul
        -# %li= link_to 'Clear cache', manager_expire_cache_path
        %li= link_to 'spec runner all', spec_runner_root_path
        %li
          = form_tag '/blah blah' do
            = text_field_tag '', 'spec_runner/which'
            = submit_tag 'Spec Runner Which'

%script#nodes_list{ :type => 'text/template' }        
  .item.nodes-list
    .inner
      %h3= t('nodes.list')
      %ul
        - (@nodes || []).each do |node|
          %li
            = "#{node[:node_name]} -p #{node[:port]}"
            = form_tag run_client_on_node_path(node[:node_name]) do
              = submit_tag 'Run Client'


%script#latest_commit{:type => "text/template"}
  .item.latest-commit
    .inner
      %h3 Latest Commit
      = simple_format @latest_commit_message unless @latest_commit_message.blank?

