%script#report_small-template{:type => "text/template"}
  .report-small
    .vote
      <a class='up' name_seo="<%= name_seo %>" href='javascript:void(0);'><img src='/assets/icons/32x32/thumbs_up.png' width=16 alt='thumbs up' /></a>
      <a class='down' name_seo="<%= name_seo %>" href='javascript:void(0);'><img src='/assets/icons/32x32/thumbs_down.png' width=16 alt='thumbs down' /></a>

    %h3 <a class='show-report' href='javascript:void(0)' name_seo="<%= name_seo %>" ><%= name %></a>
    .meta By <%= username %>
    <div class='bg-image'><img src="<%= photo_url %>" alt='' /></div>
    .subhead <%= subhead %>
    
%script#reports_list-template{:type => "text/template"}    
  .reports-list
    %h3.trash Reports List Template
    %ul
      <% _.each( reports, function(report) { %>
      %li
        <img src="<%= report.photo_url %>" alt="<%= report.name %>" /></a>
        
        %h5
          <a href="javascript:void(0)" name_seo="<%= report.name_seo %>" class="report-link"><%= report.name %></a>
        .meta
          On <%= report.created_at %>
          By <%= report.username %>
          
          <% if ( report.tag_name.length > 0 ) { %>
          In <%= report.tag_name %>
          <% } %>
        .subhead
          <%= report.subhead %>
        .c
      <% }) %>
