

= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
  .row
    .large-2.small-2.columns= f.label :email
    .large-10.small-10.columns= f.email_field :email
  .row
    .large-2.small-2.columns= f.label :name
    .large-10.small-10.columns= f.text_field :name
  .row
    .large-2.small-2.columns= f.label :username
    .large-10.small-10.columns= f.text_field :username
  .row
    .large-2.small-2.columns= f.label :password
    .large-10.small-10.columns= f.password_field :password
  .row
    .large-2.small-2.columns= f.label :password_confirmation
    .large-10.small-10.columns= f.password_field :password_confirmation
  .row
    .large-10.large-push-2.small-10.columns= f.submit "Sign up"


