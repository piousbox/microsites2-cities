!!!
%html{ :lang => @lang }
  %head
    %title= @title
    %meta{ :name => 'description', :content => "{{ Meta.description() }}" }
    %meta{ :name => 'author', :content => "{{ Meta.author() }}" }
    %meta{ :name => 'keywords', :content => "{{ Meta.keywords() }}" }
    = stylesheet_link_tag "foundation", "app", :media => "all"
    = javascript_include_tag "application2", "http://maps.googleapis.com/maps/api/js?key=AIzaSyCB7fDqgzdMPF6sE3t9XWpzcoGklVYihVA&sensor=false"
    = csrf_meta_tags
    %meta{ :content => "width=device-width, initial-scale=1.0", :name => "viewport" }
    %meta{ :charset => 'utf-8' }
    %link{ :href => "/assets/favicon.gif", :rel => "shortcut icon" }
    = render "application/analytics"
    -# %link{ :href => 'http://fonts.googleapis.com/css?family=Kite+One|Oxygen', :rel => 'stylesheet', :type => 'text/css' }
      
  %body{ :id => @action_name, :class => @action_classes }

    .Lapplication-mini.container.content

      - if flash[:notice]
        .notice= flash[:notice]
      - if flash[:error]
        .error= flash[:error]
      .c

      %nav.top-bar{"data-topbar" => ""}
        %ul.title-area
          %li.name
            %h1= link_to 'Travel-guide.mobi', '/en/cities'
          %li.toggle-topbar.menu-icon
            %a{href: "javascript:void(0);"}
              %span Menu
        %section.top-bar-section
          = render 'login_register'
          %ul.left
            %li= link_to 'Cities', 'travel-to'
            %li= link_to 'People', 'people'
            
      = yield
    
      .c
      -# = render 'application/footer'
      .main-footer{"ng-controller" => "MetaCtrl"}
        %div{"ng-include" => "footer_partial_url"}


      